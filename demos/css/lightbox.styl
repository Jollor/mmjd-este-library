#gallery a
  display inline-block
  vertical-align top
  width 120px
  margin 10px
  padding 1px
  border solid 1px #ddd
  font-size 0px

  img
    width 100%

.e-ui-lightbox

  position fixed
  z-index 1
  left 0
  right 0
  top 0
  bottom 0

  > *
    margin 0
    padding 0

  .e-ui-lightbox-background
    position absolute
    left 0
    right 0
    top 0
    bottom 0
    z-index -1
    background-color #000
    opacity .9

  .e-ui-lightbox-image-wrapper
    position absolute
    left 10px
    right 10px
    top 10px
    bottom 10px
    text-align center

    img
      max-width 100%
      max-height 100%

  .e-ui-lightbox-sidebar
    position absolute
    left 0
    bottom 0
    padding .6em 1em
    z-index 1

    &:before
      content: ''
      position absolute
      left 0
      right 0
      top 0
      bottom 0
      background-color #000
      z-index -1
      opacity .8
      border-top-right-radius .9em

    .e-ui-lightbox-title
      font-size 13px
      color #ddd
      margin-right .3em

    .e-ui-lightbox-disabled
      opacity .5

    button
      margin 0
      margin-right .3em